{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "prettier"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", "jsx", ".ts", ".tsx"]
      }
    ],
    "react/prop-types": 0,
    "import/no-extraneous-dependencies": false,
    "prettier/prettier": "error",
    "max-len": ["error", 140]
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      }
    }
  }
}
